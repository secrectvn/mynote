# Install odoo
curl https://releases.rancher.com/install-docker/18.03.sh | sh


sudo curl -L https://github.com/docker/compose/releases/download/1.22.0/docker-compose-$(uname -s)-$(uname -m) -o /usr/local/bin/docker-compose
sudo chmod +x /usr/local/bin/docker-compose





# Install Portainer
docker swarm init
docker swarm join --token SWMTKN-1-3eugic2iyld5g28xm65sw06ntuvlmd52hxg0kn7nm3by8pr7qv-8jh8jfrrlr2c2llwgxp1bdndd 66.42.49.110:2377
To add a manager to this swarm, run 'docker swarm join-token manager' and follow the instructions.

docker network create --driver bridge odoo-nw
docker volume create --name db-data

docker run -d --name odoo-db  \
  --env POSTGRES_USER=odoo --env POSTGRES_PASSWORD=thienthan1412 \
  --network=odoo-nw --mount source=db-data,target=/var/lib/postgresql/data  \
  library/postgres:latest

  docker logs odoo-db



docker run -d --name odoo --link  odoo-db:db \
-p 8069:8069 \
-e VIRTUAL_HOST=hoangphuc.nguyencon.info \
-e LETSENCRYPT_HOST=hoangphuc.nguyencon.info \
-e LETSENCRYPT_EMAIL=contact@nguyencon.info \
-e VIRTUAL_PORT=8069 \
--network=webproxy \
--network=odoo-nw \
--mount source=odoo-data,target=/var/lib/odoo \
--mount source=odoo-extra-addons,target=/mnt/extra-addons \
--env POSTGRES_PASSWORD=thienthan1412 \
veivaa/odoo:11.0
















